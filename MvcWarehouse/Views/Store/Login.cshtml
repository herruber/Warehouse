
@{
    ViewBag.Title = "Login";
    //IF there is no set session, create an unregistered user to hold a temporary cart for this session
    if (Session["usertype"] == null)
    {
        HttpContext.Current.Session["user"] = "unregistered";

        HttpContext.Current.Session["usertype"] = MvcWarehouse.User.ShopUser.UserType.Visitor;
    }
}

<h2>Login</h2>

<form method="post">

    <table class="userform">
        <tr>
            <td><adress>Email </adress></td>
            <td><input type="text" name="email" /></td>
        </tr>

        <tr>
            <td><adress>Password </adress></td>
            <td><input type="password" name="password" /></td>
        </tr>

    </table>
    <hr />
    <input type="submit" value="Submit" id="usersubmit" />

</form>